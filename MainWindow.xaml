<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="IoT_Sensor_Event_Dashboard_WinUi.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT_Sensor_Event_Dashboard_WinUi"
    xmlns:controls="using:IoT_Sensor_Event_Dashboard_WinUi.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="IoT Sensor Event Dashboard">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="{StaticResource Brush.Surface}">
                                    <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="320"/>
                                        <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="800"/>
                                    </Grid.ColumnDefinitions>
                                    
        <!-- Left Sidebar Navigation -->
        <!-- Primary blue rail with icon buttons (no hamburger/menu icon) -->
        <Grid Grid.Column="0" Background="{StaticResource Brush.Primary}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
            <!-- Top icons -->
            <StackPanel Grid.Row="0" Spacing="16" Margin="0,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Button Tag="consumer" Click="railNav_Click" Background="Transparent" BorderThickness="0" Padding="8">
                    <SymbolIcon Symbol="Play" Foreground="{StaticResource Brush.White}"/>
                </Button>
                <Button Tag="query" Click="railNav_Click" Background="Transparent" BorderThickness="0" Padding="8">
                    <SymbolIcon Symbol="Find" Foreground="{StaticResource Brush.White}"/>
                </Button>
                                </StackPanel>

            <!-- Bottom gear -->
            <StackPanel Grid.Row="2" Margin="0,0,0,12" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Button Tag="config" Click="railNav_Click" Background="Transparent" BorderThickness="0" Padding="8">
                    <SymbolIcon Symbol="Setting" Foreground="{StaticResource Brush.White}"/>
                </Button>
                                </StackPanel>
                            </Grid>

        <!-- Secondary menu column (contextual) -->
        <Border Grid.Column="1" Background="White" Padding="12">
            <StackPanel x:Name="secondaryMenu"
                Spacing="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,10,0,0">
                <StackPanel.Resources>
                    <!-- ButtonBase로 범위를 넓혀 모든 버튼 계열에 적용 -->
                    <Style TargetType="ButtonBase">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="12,8"/>
                    </Style>

                    <!-- 혹시 AppBarButton/HyperlinkButton을 쓰고 있다면 개별 스타일도 명시 -->
                    <Style TargetType="AppBarButton">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="12,8"/>
                    </Style>
                    <Style TargetType="HyperlinkButton">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="12,8"/>
                    </Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="12,8"/>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </Border>


        <!-- Main Content Frame -->
        <Frame x:Name="contentFrame" Grid.Column="2" Navigated="contentFrame_Navigated"/>

        <!-- Right System Log Panel -->
        <controls:SystemLogPanel x:Name="systemLog" Grid.Column="3" Margin="24,67,24,66"/>
    </Grid>
</Window>
