<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="IoT_Sensor_Event_Dashboard_WinUi.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT_Sensor_Event_Dashboard_WinUi"
    xmlns:controls="using:IoT_Sensor_Event_Dashboard_WinUi.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="IoT Sensor Event Dashboard">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="{StaticResource Brush.AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="colRail" Width="88"/>
            <ColumnDefinition x:Name="colSecondary" Width="320"/>
            <ColumnDefinition x:Name="colMain" Width="5*"/>
            <ColumnDefinition x:Name="colLog" Width="360"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style x:Key="RailButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="CornerRadius" Value="14"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Foreground" Value="{StaticResource Brush.Nav.Inactive}"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border x:Name="Root"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="{TemplateBinding CornerRadius}"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Target="Root.Background" Value="{StaticResource Brush.Nav.ButtonHover}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Target="Root.Background" Value="{StaticResource Brush.Nav.ActiveBackground}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <!-- Navigation rail -->
        <Grid Grid.RowSpan="2"
              Grid.Column="0"
              Background="{StaticResource Brush.Nav.Background}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,28,0,0" Spacing="20" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" Spacing="2" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE780;" Foreground="{StaticResource Brush.White}" FontSize="26"/>
                    <TextBlock Text="IoT Hub" Foreground="{StaticResource Brush.White}" FontWeight="SemiBold" FontSize="12"/>
                </StackPanel>

                <StackPanel Spacing="8">
                    <Button x:Name="NavButtonConsumer" Tag="consumer" Click="railNav_Click" Style="{StaticResource RailButtonStyle}">
                        <StackPanel Orientation="Vertical" Spacing="6" HorizontalAlignment="Center">
                            <SymbolIcon Symbol="Play"
                                        Foreground="{Binding ElementName=NavButtonConsumer, Path=Foreground}"/>
                            <TextBlock Text="Live"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Foreground="{Binding ElementName=NavButtonConsumer, Path=Foreground}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavButtonQuery" Tag="query" Click="railNav_Click" Style="{StaticResource RailButtonStyle}">
                        <StackPanel Orientation="Vertical" Spacing="6" HorizontalAlignment="Center">
                            <SymbolIcon Symbol="Find"
                                        Foreground="{Binding ElementName=NavButtonQuery, Path=Foreground}"/>
                            <TextBlock Text="Query"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Foreground="{Binding ElementName=NavButtonQuery, Path=Foreground}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,28" HorizontalAlignment="Center">
                <Button x:Name="NavButtonConfig" Tag="config" Click="railNav_Click" Style="{StaticResource RailButtonStyle}">
                    <StackPanel Orientation="Vertical" Spacing="6" HorizontalAlignment="Center">
                        <SymbolIcon Symbol="Setting"
                                    Foreground="{Binding ElementName=NavButtonConfig, Path=Foreground}"/>
                        <TextBlock Text="Config"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding ElementName=NavButtonConfig, Path=Foreground}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Top header -->
        <Border Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" Margin="24,24,24,16"
                Background="{StaticResource Brush.Surface.Layer}"
                CornerRadius="20"
                BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" Padding="24">
            <Grid ColumnSpacing="18" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Spacing="6">
                    <TextBlock Text="IoT Sensor Control Center" FontSize="26" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text.Primary}"/>
                    <TextBlock Text="Monitor ingest pipelines, replay historical events and tune your Kafka connectivity in one place." Style="{StaticResource Caption}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <TextBox Width="220" PlaceholderText="Search sensors or logs" CornerRadius="12"/>
                    <Button Content="Generate Report" Style="{StaticResource Button.Filled}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Secondary action column -->
        <Border Grid.Row="1" Grid.Column="1" Margin="24,0,0,24" Padding="24"
                Background="{StaticResource Brush.Surface.Layer}"
                CornerRadius="20"
                BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
            <StackPanel x:Name="secondaryMenu" Spacing="14">
                <StackPanel.Resources>
                    <Style TargetType="ButtonBase">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Margin" Value="0,4,0,0"/>
                    </Style>
                    <Style TargetType="Button" BasedOn="{StaticResource Button.Filled}"/>
                    <Style TargetType="TextBox">
                        <Setter Property="Margin" Value="0,4,0,0"/>
                        <Setter Property="CornerRadius" Value="12"/>
                    </Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Margin" Value="0,4,0,0"/>
                        <Setter Property="CornerRadius" Value="12"/>
                    </Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                    <Style TargetType="HyperlinkButton">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0,6"/>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </Border>

        <!-- Main content frame -->
        <Border Grid.Row="1" Grid.Column="2" Margin="24,0,24,24" Padding="0"
                Background="{StaticResource Brush.Surface.Layer}" CornerRadius="24"
                BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
            <Frame x:Name="contentFrame" Navigated="contentFrame_Navigated"/>
        </Border>

        <!-- System log -->
        <Border Grid.Row="1" Grid.Column="3" Margin="0,0,24,24" Padding="0"
                Background="{StaticResource Brush.Surface.Layer}" CornerRadius="24"
                BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
            <controls:SystemLogPanel x:Name="systemLog" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <!-- Adaptive layout -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowSizeStates">

                <!-- 데스크톱 (1600px 이상) -->
                <VisualState x:Name="WideDesktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="colSecondary.Width" Value="320"/>
                        <Setter Target="colMain.Width" Value="5*"/>
                        <Setter Target="colLog.Width" Value="360"/>
                        <Setter Target="systemLog.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- 노트북 (1200~1599px): 3:2 -->
                <VisualState x:Name="Laptop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="colSecondary.Width" Value="280"/>
                        <Setter Target="colMain.Width" Value="4*"/>
                        <Setter Target="colLog.Width" Value="2*"/>
                        <Setter Target="systemLog.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- 태블릿 (900~1199px): 1:1 -->
                <VisualState x:Name="Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="colSecondary.Width" Value="200"/>
                        <Setter Target="colMain.Width" Value="1*"/>
                        <Setter Target="colLog.Width" Value="1.5*"/>
                        <Setter Target="systemLog.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- 작은 화면 (<900px): 보조 메뉴/로그 접기 -->
                <VisualState x:Name="Phone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="colSecondary.Width" Value="0"/>
                        <Setter Target="colMain.Width" Value="1*"/>
                        <Setter Target="colLog.Width" Value="0"/>
                        <Setter Target="systemLog.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Window>
