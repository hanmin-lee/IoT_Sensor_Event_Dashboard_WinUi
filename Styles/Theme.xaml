<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Brushes used across the app -->
    <SolidColorBrush x:Key="Brush.Surface" Color="#081021"/>
    <SolidColorBrush x:Key="Brush.SurfaceAlt" Color="#0E1A30"/>
    <SolidColorBrush x:Key="Brush.Card" Color="#101D36"/>
    <SolidColorBrush x:Key="Brush.Card.Border" Color="#1E2B43"/>
    <SolidColorBrush x:Key="Brush.Primary" Color="#2563EB"/>
    <SolidColorBrush x:Key="Brush.Primary.Muted" Color="#1E3A8A"/>
    <SolidColorBrush x:Key="Brush.White" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="Brush.Text.Muted" Color="#94A3B8"/>
    <SolidColorBrush x:Key="Brush.Border" Color="#1F2A44"/>
    <SolidColorBrush x:Key="Brush.Status.Ok" Color="#22C55E"/>
    <SolidColorBrush x:Key="Brush.Status.Warning" Color="#FACC15"/>
    <SolidColorBrush x:Key="Brush.Status.Error" Color="#F87171"/>

    <LinearGradientBrush x:Key="Brush.Navigation">
        <GradientStop Offset="0" Color="#14223B"/>
        <GradientStop Offset="1" Color="#0B1323"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.Header">
        <GradientStop Offset="0" Color="#12213D"/>
        <GradientStop Offset="1" Color="#0A1529"/>
    </LinearGradientBrush>

    <!-- Base typography -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
    </Style>

    <!-- Typography -->
    <Style x:Key="Heading" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
    </Style>

    <Style x:Key="Heading.Large" TargetType="TextBlock" BasedOn="{StaticResource Heading}">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Muted}"/>
    </Style>

    <!-- Card container style -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.Card}"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Card.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style x:Key="InfoPill" TargetType="Border">
        <Setter Property="Background" Value="#162742"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="0,0,16,0"/>
        <Setter Property="BorderBrush" Value="#1F3358"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Filled primary button style -->
    <Style x:Key="Button.Filled" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.White}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="MinWidth" Value="96"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="#2E6FF4"/>
                                        <Setter Target="Root.BorderBrush" Value="#2E6FF4"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="#1E3F94"/>
                                        <Setter Target="Root.BorderBrush" Value="#1E3F94"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Opacity" Value="0.6"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Outlined button style -->
    <Style x:Key="Button.Outlined" TargetType="Button">
        <Setter Property="Background" Value="#162742"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Root.BorderBrush" Value="#2D3E63"/>
                                        <Setter Target="Root.Background" Value="#1C2D4B"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="#21365C"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Opacity" Value="0.6"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#0D182C"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,8"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#0D182C"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <Style TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid>
                        <Border x:Name="Root" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="#162742"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Target="Root.Background" Value="#1E3F94"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
