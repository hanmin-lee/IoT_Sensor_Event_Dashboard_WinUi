<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IoT_Sensor_Event_Dashboard_WinUi.Pages.ConsumerControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT_Sensor_Event_Dashboard_WinUi.Pages"
    NavigationCacheMode="Required">

    <ScrollViewer>
        <StackPanel Spacing="16" Padding="24">
            <TextBlock Text="Consumer Control" Style="{StaticResource Heading}"/>

            <Border x:Name="statusSection" Style="{StaticResource Card}" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Real-time Status" Style="{StaticResource Heading}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Partition"/>
                            <TextBlock x:Name="labelCurrentPartition" Text="N/A"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Offset"/>
                            <TextBlock x:Name="labelCurrentOffset" Text="N/A"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Throughput (msg/sec)"/>
                            <TextBlock x:Name="labelMessagesPerSecond" Text="N/A"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border x:Name="recentSection" Style="{StaticResource Card}" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Recent Events" Style="{StaticResource Heading}"/>
                    <ScrollViewer Height="660">
                        <StackPanel x:Name="stackPanelRecentEvents"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>


