<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IoT_Sensor_Event_Dashboard_WinUi.Pages.DataQueryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT_Sensor_Event_Dashboard_WinUi.Pages">

    <Grid Padding="32,32,32,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="6">
            <TextBlock Text="Data Query" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text.Primary}"/>
            <TextBlock Text="Browse persisted sensor events with advanced filters and pagination." Style="{StaticResource Caption}"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="0,24,0,20" Padding="24"
                Background="{StaticResource Brush.Surface}"
                CornerRadius="18"
                BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE73E;" Foreground="{StaticResource Brush.Primary}" FontSize="24"/>
                <StackPanel Spacing="4">
                    <TextBlock Text="Filters" Style="{StaticResource Heading.Sub}"/>
                    <TextBlock Text="Adjust date range, status, or keywords from the secondary panel." Style="{StaticResource Caption}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource Card}" Padding="28" CornerRadius="22">
            <StackPanel Spacing="16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="12">
                    <TextBlock Text="Search Results" Style="{StaticResource Heading}"/>
                    <Border Background="{StaticResource Brush.Surface}" CornerRadius="8" Padding="8,3">
                        <TextBlock Text="Bound to Kafka store" Style="{StaticResource Caption}"/>
                    </Border>
                </StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="listViewQueryResult"
                              Background="Transparent"
                              BorderThickness="0"
                              IsItemClickEnabled="False"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>
                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Margin="0,24,0,0" Padding="18" Background="{StaticResource Brush.Surface}" CornerRadius="16" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <Button x:Name="buttonQueryFirst" Content="First" Style="{StaticResource Button.Outlined}" MinWidth="96"/>
                <Button x:Name="buttonQueryPrev" Content="Previous" Style="{StaticResource Button.Outlined}" MinWidth="96"/>
                <Border Background="{StaticResource Brush.White}" CornerRadius="12" Padding="16,8">
                    <TextBlock x:Name="labelQueryPageInfo" Text="Page 1 / 1" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text.Primary}"/>
                </Border>
                <Button x:Name="buttonQueryNext" Content="Next" Style="{StaticResource Button.Outlined}" MinWidth="96"/>
                <Button x:Name="buttonQueryLast" Content="Last" Style="{StaticResource Button.Outlined}" MinWidth="96"/>
            </StackPanel>
        </Border>

        <!-- Hidden controls kept for code-behind compatibility -->
        <StackPanel Visibility="Collapsed">
            <DatePicker x:Name="datePickerQueryStartTime"/>
            <TimePicker x:Name="timePickerQueryStartTime"/>
            <DatePicker x:Name="datePickerQueryEndTime"/>
            <TimePicker x:Name="timePickerQueryEndTime"/>
            <TextBox x:Name="textBoxQueryKeyword"/>
            <ComboBox x:Name="comboBoxQueryStatus">
                <ComboBoxItem Content="ALL"/>
                <ComboBoxItem Content="OK"/>
                <ComboBoxItem Content="ERROR"/>
            </ComboBox>
            <Button x:Name="buttonQuerySearch" Content="Search"/>
        </StackPanel>
    </Grid>
</Page>
