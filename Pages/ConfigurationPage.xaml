<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IoT_Sensor_Event_Dashboard_WinUi.Pages.ConfigurationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT_Sensor_Event_Dashboard_WinUi.Pages">

    <ScrollViewer>
        <StackPanel Spacing="16" Padding="24">
            <TextBlock Text="Configuration" Style="{StaticResource Heading}"/>

            <Border Style="{StaticResource Card}" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Kafka Configuration" Style="{StaticResource Heading}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Bootstrap Servers:" VerticalAlignment="Center"/>
                        <TextBox x:Name="textBoxKafkaBootstrapServers" Grid.Row="0" Grid.Column="1" PlaceholderText="localhost:9092"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Topic:" VerticalAlignment="Center"/>
                        <TextBox x:Name="textBoxKafkaTopic" Grid.Row="1" Grid.Column="1" PlaceholderText="sensor.events"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Group ID:" VerticalAlignment="Center"/>
                        <TextBox x:Name="textBoxKafkaGroupId" Grid.Row="2" Grid.Column="1" PlaceholderText="sensor-dashboard-local"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="Database Configuration" Style="{StaticResource Heading}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Connection String:" VerticalAlignment="Center"/>
                        <TextBox x:Name="textBoxConnectionString" Grid.Column="1" PlaceholderText="Server=(localdb)\MSSQLLocalDB;Database=SensorDb;Trusted_Connection=True;"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Hidden controls for code-behind compatibility -->
            <StackPanel Visibility="Collapsed">
                <Button x:Name="buttonTestConnection" Content="Test Connection"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>


