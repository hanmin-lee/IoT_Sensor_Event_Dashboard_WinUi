<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IoT_Sensor_Event_Dashboard_WinUi.Pages.ConfigurationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoT_Sensor_Event_Dashboard_WinUi.Pages">

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="32,32,32,36">
            <StackPanel Spacing="6">
                <TextBlock Text="Configuration" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource Brush.Text.Primary}"/>
                <TextBlock Text="Update Kafka endpoints and persistence settings used by the dashboard." Style="{StaticResource Caption}"/>
            </StackPanel>

            <Border Style="{StaticResource Card}" Padding="28" CornerRadius="22">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="12">
                        <TextBlock Text="Kafka Configuration" Style="{StaticResource Heading}"/>
                        <Border Background="{StaticResource Brush.Surface}" CornerRadius="8" Padding="8,3">
                            <TextBlock Text="Streaming source" Style="{StaticResource Caption}"/>
                        </Border>
                    </StackPanel>

                    <Grid RowSpacing="18" ColumnSpacing="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Bootstrap Servers" VerticalAlignment="Center" Style="{StaticResource Heading.Sub}"/>
                        <TextBox x:Name="textBoxKafkaBootstrapServers" Grid.Column="1" PlaceholderText="localhost:9092" CornerRadius="12"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Topic" VerticalAlignment="Center" Style="{StaticResource Heading.Sub}"/>
                        <TextBox x:Name="textBoxKafkaTopic" Grid.Row="1" Grid.Column="1" PlaceholderText="sensor.events" CornerRadius="12"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Group ID" VerticalAlignment="Center" Style="{StaticResource Heading.Sub}"/>
                        <TextBox x:Name="textBoxKafkaGroupId" Grid.Row="2" Grid.Column="1" PlaceholderText="sensor-dashboard-local" CornerRadius="12"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="buttonTestConnection" Content="Test Connection" Style="{StaticResource Button.Filled}" Width="180"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}" Padding="28" CornerRadius="22">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="12">
                        <TextBlock Text="Database Configuration" Style="{StaticResource Heading}"/>
                        <Border Background="{StaticResource Brush.Surface}" CornerRadius="8" Padding="8,3">
                            <TextBlock Text="SQL destination" Style="{StaticResource Caption}"/>
                        </Border>
                    </StackPanel>

                    <Grid ColumnSpacing="24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Connection String" VerticalAlignment="Center" Style="{StaticResource Heading.Sub}"/>
                        <TextBox x:Name="textBoxConnectionString" Grid.Column="1" PlaceholderText="Server=(localdb)\MSSQLLocalDB;Database=SensorDb;Trusted_Connection=True;" CornerRadius="12" TextWrapping="Wrap" AcceptsReturn="True" Height="100"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>


